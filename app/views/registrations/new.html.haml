%div.span12.last
  %div.row
    %div.span12.last
      = image_tag('NSKBaanLogoZonderBaan.png', :id => "registration_image")
  %div.row
    %div.span2.banners
      = render 'banners'
    %div{:class => "span7", :id => "registration_form"}
      = form_for @registration, :validate => true do |f|
        %fieldset
          = render "#{@registration.current_step}_step", :f => f
          %div.submit_field
            = f.submit "Vorige", :name => "back_button", :class =>"button" unless @registration.first_step?
            = f.submit "Volgende", :id => "continueButton", :class =>"registration button" unless @registration.last_step?
            = f.submit "Opslaan", :id => "continueButton", :class =>"registration button" if @registration.last_step?
            %br
            %br
    %div.span2.banners.last
      = render 'banners'