%div.navbar
  %div.navbar-inner
    %div.container
      %ul.nav
        %li.active
          = link_to "NSK Baan 2012", root_path, :class => "brand"
      -if participant_signed_in?
        %ul.nav.pull-right
          %li.dropdown
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            = current_participant.email
            <b class="caret"></b>
            </a>
            %ul.dropdown-menu
              -if current_participant.entry && !current_participant.entry.new_record?
                %li
                  = link_to "Inschrijving aanpassen", edit_entry_path(current_participant.entry)
              %li
                = link_to "Gegevens aanpassen", edit_participant_registration_path
              %li
                = link_to "Facebook koppeling", authentications_path
              %li
                = link_to "Log uit", destroy_participant_session_path, :method => :delete
